// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official
theme-dark = hexo-config("dark")

// Colors
color-background = #d8e2eb
color-default = #555
color-grey = #999
color-link =  #40759b
color-link-shadow = #113f6e
color-border = #d8e2eb
color-nav = #FFF
color-title = #000
color-code = #f1f8ff
color-shadow = #adc2d7
color-page-border = #adc2d7
block-shadow = 1px 2px 3px #adc2d7
color-sidebar-text = #777
color-block-background = #FFF
color-footer = #555
color-thumb = #f1f8ff
color-copyright = #f0f0f0
if theme-dark
  color-background = #010302
  color-footer = #aaa
  color-page-border = #40759b
  color-thumb = #113f6e
